@*@model Entities.Entities.Book*@
@model BookModel

@{
    ViewData["Title"] = "Edit Book";
}
<h1>@ViewData["Title"]</h1>
<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" autocomplete="off">
            <input asp-for="Id" type="hidden" />
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPriceText"></label>
                <input asp-for="UnitPriceText" class="form-control" />
                <span asp-validation-for="UnitPriceText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockAmount" class="control-label"></label>
                <input asp-for="StockAmount" class="form-control" />
                <span asp-validation-for="StockAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Book List</a>
</div>


@section Scripts
{
    <link href="~/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <script src="~/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script>$(() => {
            $('.expiration-date').datepicker({
                todayBtn: "linked",
                clearBtn: true,
                orientation: "top auto",
                autoclose: true,
                todayHighlight: true
            });
        });</script>
}
